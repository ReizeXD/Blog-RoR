<h1 class="col-12 text-center mb-3">Criar Novo Post</h1>
<%= render 'layouts/error_messages', object: @post %>
<%= form_with(model: @post, local: true) do |f| %>
  <div class="mb-3">
    <%= f.label :title, "Título" %>
    <%= f.text_field :title, required: true, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :content, "Conteúdo" %>
    <%= f.text_area :content, rows: 3, class: "form-control", required: true, style: "resize: none;" %>
  </div>

  <div class="mb-3 d-flex justify-content-between"></div>
    <%= f.submit "Criar Post", class: "btn btn-primary" %>
    <%= link_to 'Voltar', posts_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
