
<%= form_for @user, url: password_reset_edit_path(token: params[:token]) do |f| %>
    <% if flash[:danger] %>
        <div class="alert alert-danger">
            <%= flash[:danger] %>
        </div>
    <% elsif flash[:success] %>
        <div class="alert alert-success">
            <%= flash[:success] %>
        </div>
    <% end %>
  <div class="form-group mb-3">
    <%= f.label :password, 'Senha', class: 'form-label' %>
    <%= f.password_field :password, placeholder: 'Senha', class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :password_confirmation, 'Confirmação de Senha', class: 'form-label' %>
    <%= f.password_field :password_confirmation, placeholder: 'Confirmação de senha', class: 'form-control' %>
  </div>
  <div class="d-flex justify-content-between">
    <%= f.submit 'Editar', class: 'btn btn-primary' %>
    <%= link_to 'Voltar', root_url, class: 'btn btn-secondary' %>
  </div>
<% end %>
