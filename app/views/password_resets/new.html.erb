<div class="row">
    <strong>
        <h1 class="display-4 text-center">Esqueceu a sua senha ?</h1>
    </strong>
    
    <%= form_with url: password_reset_path do |f| %>
        <div class="mb-3">
            <%= f.label :email, class: 'form-label' %>
            <%= f.email_field :email, class: 'form-control' , placeholder: "jose@gmail.com" %>
        </div>
        <div class="mb-3 d-flex justify-content-between">
            <%= f.submit 'Enviar', class: 'btn btn-primary' %>
        </div>
    <% end %>
</div>